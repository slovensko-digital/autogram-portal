<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-40 lg:px-8 lg:pt-15">
      <div class="mx-auto max-w-2xl">
        <!-- Page Header -->
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h1>
          <p class="text-gray-600">Update your account information.</p>
        </div>

        <!-- Edit Profile Form -->
        <div class="bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <!-- Name Field -->
              <div>
                <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :name, autocomplete: "name",
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2 px-3 border" %>
              </div>

              <!-- Email Field -->
              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.email_field :email, readonly: true,
                  class: "block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm sm:text-sm py-2 px-3 border text-gray-500 cursor-not-allowed" %>
              </div>

              <!-- API Token Public Key (Read-only) -->
              <div>
                <%= f.label :api_token_public_key, "API Token Public Key", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :api_token_public_key, readonly: true,
                  class: "block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm sm:text-sm py-2 px-3 border text-gray-500 cursor-not-allowed" %>
                <p class="mt-1 text-xs text-gray-500">This is your public API token key for authentication.</p>
              </div>

              <!-- Pending Reconfirmation Notice -->
              <% if resource.pending_reconfirmation? %>
                <div class="rounded-md bg-yellow-50 p-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-yellow-700">
                        <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Submit Button -->
              <div>
                <%= f.submit t('.update'),
                  class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Delete Account Section -->
        <div class="mt-8 bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('.cancel_my_account') %></h3>
            <div class="mt-2 max-w-xl text-sm text-gray-600">
              <p><%= t('.unhappy') %></p>
            </div>
            <div class="mt-5">
              <%= button_to t('.cancel_my_account'),
                registration_path(resource_name),
                data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') },
                method: :delete,
                class: "inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% content_for :title, t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %>
