<%
  # Configuration options:
  # - controller_name: Stimulus controller name (default: 'file-upload')
  # - input_name: Name attribute for the file input (required)
  # - accept_types: File accept attribute (default: PDF, XML, etc.)
  # - height: Height class (default: 'h-[400px]')
  # - title: Upload area title (default: 'Upload document here')
  # - subtitle: Upload area subtitle (default: 'Drag and drop here, or click to select a file from disk.')
  # - file_types_hint: File types hint (default: 'PDF, XML or other file')
  # - uploading_text: Text shown during upload (default: 'Adding document...')
  # - drop_text: Text shown when dragging (default: 'Drop document here')

  controller_name = local_assigns.fetch(:controller_name, 'file-upload')
  input_name = local_assigns.fetch(:input_name) { raise ArgumentError, "input_name is required" }
  accept_types = local_assigns.fetch(:accept_types, '.pdf,.xml,.xdcf,.asice,.txt,.png,.jpg,.jpeg,application/pdf,application/xml,text/xml,application/vnd.gov.sk.xmldatacontainer+xml,application/vnd.etsi.asic-e+zip')
  height = local_assigns.fetch(:height, 'h-[400px]')
  title = local_assigns.fetch(:title, 'Upload document here')
  subtitle = local_assigns.fetch(:subtitle, 'Drag and drop here, or click to select a file from disk.')
  file_types_hint = local_assigns.fetch(:file_types_hint, 'PDF, XML or other file')
  uploading_text = local_assigns.fetch(:uploading_text, 'Adding document...')
  drop_text = local_assigns.fetch(:drop_text, 'Drop document here')
%>

<div
  data-<%= controller_name.parameterize %>-target="dropzone"
  class="
  rounded-lg <%= height %> w-full border-2 border-dashed border-gray-200 cursor-pointer
  flex flex-col items-center justify-center
  hover:border-gray-300 hover:bg-gray-50/50 bg-gray-50/30 transition-all duration-200
  "
  data-action="click-><%= controller_name.parameterize %>#click dragover-><%= controller_name.parameterize %>#dragover dragleave-><%= controller_name.parameterize %>#dragleave drop-><%= controller_name.parameterize %>#drop"
>
  <div class="uploading-state hidden flex-col items-center">
    <svg class="animate-spin h-10 w-10 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
    <span class="font-medium text-gray-700 text-center mt-3 text-base"><%= uploading_text %></span>
  </div>
  
  <div class="default-state flex flex-col items-center px-6">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-400">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776"/>
    </svg>
    <span class="font-semibold text-gray-700 text-center mt-3 text-base"><%= title %></span>
    <span class="text-center text-sm mt-2 text-gray-500"><%= subtitle %></span>
    <span class="text-center text-xs mt-1.5 text-gray-400"><%= file_types_hint %></span>
  </div>
  
  <div class="dragging-state hidden flex-col items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-blue-600">
      <path stroke-linecap="round" stroke-linejoin="round" d="m9 13.5 3 3m0 0 3-3m-3 3v-6m1.06-4.19-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/>
    </svg>
    <span class="font-semibold text-blue-600 text-center mt-3 text-base"><%= drop_text %></span>
  </div>
  
  <div class="file-selected-state hidden flex-col items-center justify-center h-full">
    <div class="flex items-center space-x-4 p-6 bg-white rounded-lg shadow-sm border border-gray-200 w-full max-w-md">
      <div class="flex-shrink-0">
        <svg class="h-8 w-8 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate" data-<%= controller_name.parameterize %>-target="fileName"></p>
        <p class="text-xs text-gray-500" data-<%= controller_name.parameterize %>-target="fileSize"></p>
      </div>
      <button type="button" 
              class="flex-shrink-0 text-red-600 hover:text-red-800 p-1" 
              data-action="click-><%= controller_name.parameterize %>#removeFile"
              title="Remove file">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <p class="text-sm text-gray-500 mt-4 text-center">Click to select another file</p>
  </div>
  
  <!-- Hidden file input -->
  <input type="file" 
         data-<%= controller_name.parameterize %>-target="fileInput"
         name="<%= input_name %>"
         accept="<%= accept_types %>"
         class="hidden" 
         data-action="change-><%= controller_name.parameterize %>#change" />
</div>