<div class="w-full">
  <% if validation_result.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <div class="flex items-center mb-2">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-red-800 font-semibold">Error validating signatures</h3>
      </div>
      <ul class="text-red-700 text-sm space-y-1">
        <% validation_result.errors.each do |error| %>
          <li>• <%= error %></li>
        <% end %>
      </ul>
    </div>
  <% elsif !validation_result.has_signatures %>
    <div class="rounded-lg bg-blue-50 border border-blue-200 p-4">
      <div class="flex items-center mb-2">
        <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-blue-800 font-semibold">No electronic signatures</h3>
      </div>
      <p class="text-blue-700 text-sm">This document does not contain any electronic signatures yet. You can sign it below.</p>
    </div>
  <% else %>
    <div class="rounded-lg bg-green-50 border border-green-200 p-4">
      <div class="flex items-center mb-3">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-green-800 font-semibold">Electronic signatures found</h3>
        <span class="text-green-600 ml-1">(<%= validation_result.signatures.length %>)</span>
      </div>
      <div class="space-y-3">
        <% validation_result.signatures.each do |signature| %>
          <div class="bg-white rounded border border-green-200 p-3">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="font-medium text-gray-900"><%= signature[:signer_name] %></div>
                <div class="text-sm text-gray-600">
                  <% if signature[:timestamp_info] && signature[:timestamp_info][:qualified] %>
                    <span> • Qualified Timestamp</span>
                  <% else %>
                    <span><i>No timestamp</i></span>
                  <% end %>
                  <% if signature[:timestamp_info] && signature[:timestamp_info][:count] > 1 %>
                    <span>(<%= signature[:timestamp_info][:count] %> timestamps)</span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= signature[:signing_time]&.strftime('%d. %B %Y o %H:%M') %>
                </div>
              </div>
              <div class="flex items-center">
                <% if signature[:valid] %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Valid
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Invalid
                  </span>
                <% end %>
              </div>
            </div>
            <details class="mt-2">
              <summary class="text-sm text-blue-600 cursor-pointer hover:text-blue-800">Certificate details</summary>
              <div class="mt-2 text-sm text-gray-600 space-y-1">
                <div><strong>Subject:</strong> <%= signature[:certificate_info][:subject] %></div>
                <div><strong>Issuer:</strong> <%= signature[:certificate_info][:issuer] %></div>
                <% if signature[:certificate_info][:qualification] %>
                  <div><strong>Qualification:</strong> <%= signature[:certificate_info][:qualification] %></div>
                <% end %>
              </div>
              <% if signature[:timestamp_info] && signature[:timestamp_info][:timestamps] %>
                <div class="mt-3">
                  <strong class="text-sm text-gray-800">Timestamps:</strong>
                  <% signature[:timestamp_info][:timestamps].each do |timestamp| %>
                    <div class="ml-2 mt-1 text-sm text-gray-600">
                      <div>
                        <strong><%= timestamp[:type] == 'SIGNATURE_TIMESTAMP' ? 'Podpis:' : 'Archív:' %></strong> 
                        <%= timestamp[:time]&.strftime('%d. %b %Y o %H:%M') %>
                      </div>
                      <div><strong>Authority:</strong> <%= timestamp[:authority] %></div>
                      <% if timestamp[:qualification] %>
                        <div><strong>Qualification:</strong> <%= timestamp[:qualification] %></div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </details>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>