<%# locals: (info_hidden: false, no_preview: false, contract:) %>

<% if contract.awaiting_signature? %>
  <% content_for :head do %>
    <script src="<%= asset_path('autogram-sdk.js') %>"></script>
    <script>
      // Device detection for proper button visibility
      document.addEventListener('DOMContentLoaded', function() {
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || 
                        ('ontouchstart' in window) || 
                        (navigator.maxTouchPoints > 0);
        
        const desktopElements = document.querySelectorAll('.desktop-signing-element');
        desktopElements.forEach(element => {
          if (isMobile) {
            element.style.display = 'none';
          } else {
            element.style.display = 'block';
          }
        });
      });
    </script>
  <% end %>

  <div id="signature_actions_<%= contract.uuid %>" data-controller="signature-method-selector">
    <% if contract.allowed_methods.count > 1 %>
      <div class="mb-6 bg-white rounded-lg p-4 shadow-sm">              
        <div>
          <label class="text-sm font-medium text-gray-700">Select signature method:</label>
          <div class="mt-3 space-y-3">
            <% contract.allowed_methods.each_with_index do |method, index| %>
              <label class="cursor-pointer block">
                <input type="radio" 
                        name="signature_method_<%= contract.uuid %>" 
                        value="<%= method %>"
                        data-signature-method-selector-target="methodRadio"
                        data-action="change->signature-method-selector#updateButtons"
                        class="sr-only peer"
                        <%= 'checked' if index == 0 %>>
                <div class="p-4 rounded-lg border border-gray-200 bg-white hover:bg-blue-50 hover:border-blue-300 transition-colors duration-200 peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:bg-blue-50 peer-checked:border-blue-300">
                  <div class="flex-1 min-w-0">
                    <div class="text-base font-medium text-gray-900">
                      <%= method_label(method) %>
                    </div>
                    <div class="text-sm text-gray-500 mt-1">
                      <% if method == 'qes' %>
                        Standard Qualified Electronic Signature
                      <% elsif method == 'ts-qes' %>
                        Qualified Electronic Signature with Timestamp
                      <% end %>
                    </div>
                  </div>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Hidden radio button for single method -->
      <% contract.allowed_methods.each_with_index do |method, index| %>
        <input type="radio" 
                name="signature_method_<%= contract.uuid %>" 
                value="<%= method %>"
                data-signature-method-selector-target="methodRadio"
                data-action="change->signature-method-selector#updateButtons"
                class="sr-only"
                checked
                style="display: none;">
      <% end %>
    <% end %>


    <div class="mb-4 space-y-3" data-signature-method-selector-target="buttonContainer">
      <!-- Desktop Signing Button -->
      <div data-controller="document-signer" 
          data-document-signer-use-timestamp-value="false"
          data-document-signer-contract-param-value="<%= contract_path(contract) %>"
          data-signature-method-selector-target="signerController"
          class="desktop-signing-element hidden sm:block">
        <%= form_with url: sign_contract_path(contract), method: :post, 
                      class: "w-full",
                      data: { 
                        "document-signer-target": "form",
                        action: "submit->document-signer#signAutogram"
                      } do |form| %>
          <button type="submit" 
                  data-document-signer-target="submitButton"
                  class="group relative w-full p-4 text-left bg-blue-600 border border-transparent rounded-lg cursor-pointer hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <div class="flex items-center text-white">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round"
                        d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"/>
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <div class="font-semibold text-lg">Sign with Autogram Desktop</div>
                <div class="text-blue-100 text-sm mt-1">Desktop application with qualified electronic seal or chip ID card</div>
              </div>
            </div>
          </button>
        <% end %>
      </div>

      <!-- Mobile/AVM Signing Button -->
      <%= form_with url: sign_avm_contract_path(contract), method: :post, 
                    class: "w-full",
                    local: false,
                    data: { controller: "avm-signer" } do |form| %>
        <% if no_preview %>
          <%= form.hidden_field :no_preview, value: "1" %>
        <% end %>
        <button type="submit" 
                class="group relative w-full p-4 text-left bg-green-600 border border-transparent rounded-lg cursor-pointer hover:bg-green-700 focus:ring-4 focus:ring-green-300 transition-colors duration-200"
                id="avm-sign-button"
                data-avm-signer-target="button"
                data-action="click->avm-signer#handleClick">
          <div class="flex items-center text-white">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 3.75 9.375v-4.5ZM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 0 1-1.125-1.125v-4.5ZM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 13.5 9.375v-4.5Z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 6.75h.75v.75h-.75v-.75ZM6.75 16.5h.75v.75h-.75v-.75ZM16.5 6.75h.75v.75h-.75v-.75ZM13.5 13.5h4.5v4.5h-4.5v-4.5Z"/>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <div class="font-semibold text-lg">Sign with AVM Mobile</div>
              <div class="text-green-100 text-sm mt-1">Mobile app or web interface - scan QR code or open AVM app directly</div>
            </div>
          </div>
        </button>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-6 shadow-sm">
    <h3 class="text-lg font-semibold text-green-800">Documents have been signed</h3>
    <div class="text-green-700">
      <p class="mb-3">
        This contract has been signed and is complete. No further signature is required.
      </p>
    </div>
  </div>
<% end %>
