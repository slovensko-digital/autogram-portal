<%# locals: (info_hidden: false, no_preview: false, contract:) %>

<% if contract.awaiting_signature? %>
  <% content_for :head do %>
    <script src="<%= asset_path('autogram-sdk.js') %>"></script>
  <% end %>

  <div id="signature_actions_<%= contract.id %>" data-controller="signature-method-selector">
    <% if contract.allowed_methods.count > 1 %>
      <div class="mb-6 bg-white rounded-lg p-4 shadow-sm">              
        <div>
          <label class="text-sm font-medium text-gray-700">Select signature method:</label>
          <div class="mt-3 space-y-3">
            <% contract.allowed_methods.each_with_index do |method, index| %>
              <label class="cursor-pointer block">
                <input type="radio" 
                        name="signature_method" 
                        value="<%= method %>"
                        data-signature-method-selector-target="methodRadio"
                        data-action="change->signature-method-selector#updateButtons"
                        class="sr-only peer"
                        <%= 'checked' if index == 0 %>>
                <div class="p-4 rounded-lg border border-gray-200 bg-white hover:bg-blue-50 hover:border-blue-300 transition-colors duration-200 peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:bg-blue-50 peer-checked:border-blue-300">
                  <div class="flex-1 min-w-0">
                    <div class="text-base font-medium text-gray-900">
                      <%= method_label(method) %>
                    </div>
                    <div class="text-sm text-gray-500 mt-1">
                      <% if method == 'qes' %>
                        Standard Qualified Electronic Signature
                      <% elsif method == 'ts-qes' %>
                        Qualified Electronic Signature with Timestamp
                      <% end %>
                    </div>
                  </div>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Hidden radio button for single method -->
      <% contract.allowed_methods.each_with_index do |method, index| %>
        <input type="radio" 
                name="signature_method" 
                value="<%= method %>"
                data-signature-method-selector-target="methodRadio"
                data-action="change->signature-method-selector#updateButtons"
                class="sr-only"
                checked
                style="display: none;">
      <% end %>
    <% end %>


    <div class="mb-4 space-y-3" data-signature-method-selector-target="buttonContainer">
      <!-- Desktop Signing Button -->
      <div data-controller="document-signer" 
          data-document-signer-use-timestamp-value="false"
          data-document-signer-contract-param-value="<%= contract_path(contract) %>"
          data-signature-method-selector-target="signerController"
          class="md:block">
        <%= form_with url: sign_contract_path(contract), method: :post, 
                      class: "w-full",
                      data: { 
                        "document-signer-target": "form",
                        action: "submit->document-signer#signAutogram"
                      } do |form| %>
          <button type="submit" 
                  data-document-signer-target="submitButton"
                  class="inline-flex items-center justify-center w-full p-4 text-white bg-blue-600 border border-transparent rounded-lg cursor-pointer hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                  stroke="currentColor" class="w-5 h-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"/>
            </svg>
            <span class="font-semibold">Sign with Autogram</span>
          </button>
        <% end %>
      </div>

      <!-- Mobile Signing Button -->
      <%= form_with url: sign_avm_contract_path(contract), method: :post, 
                    class: "w-full",
                    local: false,
                    data: { controller: "avm-signer" } do |form| %>
        <% if no_preview %>
          <%= form.hidden_field :no_preview, value: "1" %>
        <% end %>
        <button type="submit" 
                class="inline-flex items-center justify-center w-full p-4 text-white bg-green-600 border border-transparent rounded-lg cursor-pointer hover:bg-green-700 focus:ring-4 focus:ring-green-300 transition-colors duration-200"
                id="avm-sign-button"
                data-avm-signer-target="button"
                data-action="click->avm-signer#handleClick">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 3.75 9.375v-4.5ZM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 0 1-1.125-1.125v-4.5ZM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 13.5 9.375v-4.5Z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 6.75h.75v.75h-.75v-.75ZM6.75 16.5h.75v.75h-.75v-.75ZM16.5 6.75h.75v.75h-.75v-.75ZM13.5 13.5h4.5v4.5h-4.5v-4.5Z"/>
          </svg>
          <span class="font-semibold">Sign with AVM</span>
        </button>
      <% end %>
    </div>

    <% unless info_hidden %>
      <!-- Information about signing methods -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-4">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Information about signing applications:</h4>
        <div class="space-y-3 text-sm text-gray-700">
          <div class="flex items-start  md:flex">
            <div class="flex-shrink-0 w-5 h-5 bg-blue-600 rounded mt-0.5 mr-3 flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"/>
              </svg>
            </div>
            <div>
              <p><strong>Autogram</strong> - Desktop Application</p>
              <p class="text-xs text-gray-600 mt-1">You need to have the Autogram application installed on your computer and a qualified electronic seal or a chip ID card connected.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-5 h-5 bg-green-600 rounded mt-0.5 mr-3 flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 3.75 9.375v-4.5ZM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 0 1-1.125-1.125v-4.5ZM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 13.5 9.375v-4.5Z"/>
              </svg>
            </div>
            <div>
              <p><strong>AVM</strong> - Mobile Signing</p>
              <p class="text-xs text-gray-600 mt-1 hidden md:block">Signing via the Autogram mobile application or web interface. Click the button to show a QR code for scanning with your mobile device.</p>
              <p class="text-xs text-gray-600 mt-1 md:hidden">Signing via the Autogram mobile application. Click the button to directly open the AVM app on your device.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-6 shadow-sm">
    <h3 class="text-lg font-semibold text-green-800">Documents have been signed</h3>
    <div class="text-green-700">
      <p class="mb-3">
        This contract has been signed and is complete. No further signature is required.
      </p>
    </div>
  </div>
<% end %>
