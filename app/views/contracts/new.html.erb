<main>
  <div class="mx-auto max-w-4xl px-6 pb-24 pt-10 sm:pb-40 lg:px-8">
    <div class="mx-auto max-w-full">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= t('.page_title') %></h1>
        <p class="text-base text-gray-600 mb-2"><%= t('.page_subtitle') %></p>
        <p class="text-base text-gray-600"><%= t('.page_help_text_html', link: link_to(t('.signing_guide_link'), '#', class: 'text-blue-600 hover:underline')).html_safe %></p>
      </div>

      <%= form_with model: @contract, local: true, multipart: true, 
                    class: "space-y-6", 
                    data: { 
                      controller: "file-upload",
                      "file-upload-mode-value": "single",
                      "file-upload-dragging-class": "border-blue-800 text-blue-800",
                      "file-upload-uploading-class": "border-solid"
                    } do |form| %>
        <% if @contract.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= t('.errors_title') %>
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @contract.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <%= render 'shared/dropzone', input_name: 'document[blob]' %>
          <div class="flex items-start space-x-3">
            <%= form.check_box :agree_to_policies, 
                              { required: true, class: "mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" },
                              { checked_value: "1", unchecked_value: "0" } %>
            <%= form.label :agree_to_policies, class: "text-sm text-gray-700" do %>
              <%= t('homepage.index.upload_form.agree_to_policies_html', 
                    terms_link: link_to(t('homepage.index.upload_form.terms_of_service'), terms_of_service_index_path, target: "_blank", class: "text-blue-600 hover:underline"),
                    privacy_link: link_to(t('homepage.index.upload_form.privacy_policy'), privacy_policy_index_path, target: "_blank", class: "text-blue-600 hover:underline")).html_safe %>
            <% end %>
          </div>

          <%= form.submit t('.submit_button'), 
                          class: "w-full inline-flex justify-center items-center px-4 py-3 rounded-md bg-blue-600 text-base font-semibold text-white hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 opacity-50 cursor-not-allowed transition-all duration-200",
                          disabled: true,
                          data: { "file-upload-target": "submitButton" } %>
        </div>
      <% end %>
    </div>
  </div>
</main>

<% content_for :title, t('.title') %>