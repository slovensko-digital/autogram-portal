<%= turbo_frame_tag "contract_actions_#{@contract.uuid}" do %>
  <div class="w-full">
        <div class="mb-6 text-center lg:text-left">
          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= t('documents.actions.request_signature.title') %></h3>
          <p class="text-gray-600"><%= t('documents.actions.request_signature.subtitle') %></p>
        </div>
        <%= form_with url: contract_path(@contract), 
                      method: :put,
                      local: true, 
                      data: { turbo_frame: "_top", controller: "form-submit", action: "submit->form-submit#handleSubmit" }, 
                      class: "space-y-6" do |form| %>
          <div class="space-y-6">
            <div>
              <label class="flex items-center text-sm font-medium text-gray-700 mb-2">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <%= t('documents.actions.request_signature.recipient_email') %>
              </label>
              <div class="flex">
                <%= text_field_tag "recipient_email", "", 
                      placeholder: t('documents.actions.request_signature.recipient_email_placeholder'),
                      class: "flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
              </div>
              <p class="mt-1 text-sm text-gray-500"><%= t('documents.actions.request_signature.recipient_email_help') %></p>
            </div>
            <div>
              <label class="flex items-center text-sm font-medium text-gray-700 mb-2">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                </svg>
                <%= t('documents.actions.request_signature.message') %>
              </label>
              <%= text_area_tag "message", "", 
                    placeholder: t('documents.actions.request_signature.message_placeholder'),
                    rows: 6,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          <%= hidden_field_tag "contract[allowed_method]", @contract.allowed_methods.first %>
          <%= hidden_field_tag "contract[format_container_combination]", @contract.signature_parameters&.format_container_combination %>
          <div class="flex flex-col sm:flex-row gap-8">
            <%= link_to actions_contract_path(@contract), class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <%= t('documents.new.actions.back') %>
            <% end %>
            <%= form.submit t('documents.actions.continue_signing'), 
                            class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
                            data: { "form-submit-target": "submitButton" } %>
          </div>
        <% end %>
  </div>
<% end %>
