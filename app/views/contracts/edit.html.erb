<%= turbo_stream_from "contract_#{@contract.uuid}" %>

<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 pb-8 pt-10 lg:flex lg:px-8 lg:pt-15">
      <div class="mx-auto mt-8 flex max-w-full sm:max-w-3xl sm:mt-12 lg:ml-10 lg:mr-0 lg:mt-8 lg:max-w-none lg:flex-none xl:ml-32">
        <div class="flex flex-col items-center max-w-full sm:max-w-3xl mx-auto lg:max-w-none w-[1000px]">
          <div class="w-full mb-6">
            <div class="flex justify-between items-start">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Contract #<%= @contract.id %></h1>
                <% if @contract.uuid %>
                  <p class="text-gray-600">UUID: <span class="font-mono text-sm"><%= @contract.uuid %></span></p>
                <% end %>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to "Back to contracts", contracts_path, 
                           class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                <%= link_to contract_path(@contract), 
                           data: { 
                             turbo_method: :delete,
                             turbo_confirm: "Are you sure you want to delete this contract? This action is irreversible and will also remove all documents associated with this contract."
                           },
                           class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                  Destroy contract
                <% end %>
              </div>
            </div>
          </div>

          <!-- Full width signature validation section -->
          <div class="w-full mb-6">
            <%= render 'signature_validation' %>
          </div>

          <!-- Two column layout with consistent width -->
          <div class="flex flex-col lg:flex-row w-full">
            <div class="w-full lg:w-1/3 border-b lg:border-b-0 lg:border-r border-gray-200 bg-gray-50 lg:flex-shrink-0">
              <div class="p-6">
                <div class="mb-6">
                  <%= render 'signature_actions', contract: @contract %>
                </div>
                <% unless @contract.awaiting_signature? %>
                  <div class="mb-6">
                    <%= render 'download_actions' %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="w-full lg:w-2/3 lg:flex-shrink-0 lg:min-w-0">
              <div class="p-6">
                <%= render 'documents_preview' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% content_for :title, "Contract ##{@contract.id}" %>
