<%= turbo_stream_from "contract_#{@contract.uuid}" %>

<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto flex flex-col items-center max-w-4xl px-6 pb-8 pt-10 lg:flex lg:px-8">
      <div class="flex flex-col items-center max-w-full sm:max-w-3xl mx-auto lg:max-w-none w-[800px]">
        <% if current_user && @contract.user == current_user %>
          <div class="w-full mb-6">
            <%= link_to contracts_path, class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500" do %>
              <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
              </svg>
              <%= t('.all_contracts') %>
            <% end %>
          </div>
        <% end %>

        <div class="w-full mb-6">
          <% if @contract.user && (@contract.user != current_user) %>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('.title_requested') %></h1>
            <p class="text-gray-600"><%= t('.subtitle_requested') %></p>
          <% else %>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('.title') %></h1>
            <p class="text-gray-600"><%= t('.subtitle') %></p>
          <% end %>
        </div>

        <% if @contract.user && (@contract.user != current_user) %>
          <div class="w-full bg-orange-50 border-l-4 border-orange-400 p-4 mb-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-orange-800">
                  <span class="font-semibold"><%= t('.sender') %>:</span> <%= @contract.user.email %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <%= render 'visualization_with_toggle', contract: @contract %>

        <%= turbo_frame_tag "signature_validation_#{@contract.uuid}", 
                            src: validate_contract_path(@contract),
                            loading: "lazy",
                            class: "w-full mb-6" do %>
          <div class="w-full">
            <div class="rounded-lg bg-gray-50 border border-gray-200 p-4">
              <div class="flex items-center">
                <svg class="animate-spin h-5 w-5 text-gray-500 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="text-gray-600"><%= t('contracts.signature_validation.validating') %></span>
              </div>
            </div>
          </div>
        <% end %>
        <% unless @contract.awaiting_signature? %>
          <div class="w-full bg-green-50 border-l-4 border-green-400 p-4 mb-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-800">
                  <span class="font-semibold"><%= t('contracts.sign.already_signed.title') %></span><br>
                  <%= t('contracts.sign.already_signed.message') %>
                </p>
              </div>
            </div>
            <div>
              <%= link_to t('actions.download'), signed_document_contract_path(@contract), class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>

        <% if @contract.awaiting_signature? || current_user == @contract.user %>
          <%= render 'signature_actions', contract: @contract %>
        <% end %>
      </div>
    </div>
  </div>
</main>

<% content_for :title, "Contract ##{@contract.short_uuid}" %>
