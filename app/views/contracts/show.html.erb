<%= turbo_stream_from "contract_#{@contract.uuid}" %>

<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 pb-8 pt-10 lg:flex lg:px-8 lg:pt-15">
      <div class="mx-auto mt-8 flex max-w-full sm:max-w-3xl sm:mt-12 lg:ml-10 lg:mr-0 lg:mt-8 lg:max-w-none lg:flex-none xl:ml-32">
        <div class="flex flex-col items-center max-w-full sm:max-w-3xl mx-auto lg:max-w-none w-[1000px]">
          <div class="w-full mb-6">
            <div class="flex justify-between items-start">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Contract #<%= @contract.id %></h1>
                <% if @contract.uuid %>
                  <p class="text-gray-600">UUID: <span class="font-mono text-sm"><%= @contract.uuid %></span></p>
                <% end %>
              </div>
              <div class="flex items-center space-x-2">
                <% if current_user %>
                  <%= link_to edit_contract_path(@contract),
                    class: "inline-flex items-center gap-1.5 px-3 py-2 border border-gray-300  text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
                    </svg>
                    Edit contract
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="w-full mb-6">
            <%= render 'signature_validation' %>
          </div>
          <div class="flex flex-col lg:flex-row w-full border border-gray-200 rounded-lg overflow-hidden">
            <div class="w-full lg:w-1/3 border-b lg:border-b-0 lg:border-r border-gray-200 bg-gray-50 lg:flex-shrink-0">
              <div class="p-6">
                <div class="mb-6">
                  <%= render 'signature_actions', contract: @contract %>
                </div>
                <% unless @contract.awaiting_signature? %>
                  <div class="mb-6">
                    <%= render 'download_actions' %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="w-full lg:w-2/3 lg:flex-shrink-0 lg:min-w-0">
              <div class="p-6">
                <%= render 'documents_preview' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% content_for :title, "Contract ##{@contract.id}" %>
