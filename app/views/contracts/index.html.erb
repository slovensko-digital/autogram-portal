<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-40 lg:flex lg:px-8 lg:pt-15">
      <div class="mx-auto mt-16 flex max-w-full sm:max-w-3xl sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-16 lg:max-w-none lg:flex-none xl:ml-32">
        <div class="flex flex-col items-center max-w-full h-auto sm:max-w-3xl mx-auto lg:max-w-none w-[1000px]">
          <!-- Page Header -->
          <div class="w-full mb-6 flex justify-between items-center">
            <h1 class="text-3xl font-bold text-gray-900">Zmluvy</h1>
            <%= link_to "Nová zmluva", new_contract_path, 
                        class: "inline-flex items-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-blue-700 focus:bg-blue-700 active:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition ease-in-out duration-150" %>
          </div>

          <!-- Contracts List -->
          <div class="w-full">
            <% if @contracts.any? %>
              <div class="bg-white shadow overflow-hidden sm:rounded-md">
                <ul role="list" class="divide-y divide-gray-200">
                  <% @contracts.each do |contract| %>
                    <li>
                      <div class="px-4 py-4 flex items-center justify-between">
                        <div class="flex items-center min-w-0 flex-1">
                          <div class="flex-shrink-0">
                            <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                            </svg>
                          </div>
                          <div class="ml-4 flex-1 min-w-0">
                            <div class="flex items-center">
                              <%= link_to contract_path(contract), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                                Zmluva #<%= contract.id %>
                              <% end %>
                              <% if contract.uuid %>
                                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                  <%= contract.uuid.first(8) %>
                                </span>
                              <% end %>
                            </div>
                            <div class="mt-1 flex items-center">
                              <p class="text-sm text-gray-500">
                                <% if contract.documents.any? %>
                                  <%= pluralize(contract.documents.count, 'dokument', 'dokumenty') %>
                                <% else %>
                                  Žiadne dokumenty
                                <% end %>
                                <% if contract.user %>
                                  • <%= contract.user.email rescue 'Neznámy používateľ' %>
                                <% end %>
                              </p>
                            </div>
                            <div class="mt-1">
                              <p class="text-xs text-gray-400">
                                Vytvorené: <%= contract.created_at.strftime("%d.%m.%Y %H:%M") %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="flex items-center space-x-2">
                          <% if contract.allowed_methods.any? %>
                            <div class="flex flex-wrap gap-1">
                              <% contract.allowed_methods.each do |method| %>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                                           <%= case method
                                               when 'qualified' then 'bg-green-100 text-green-800'
                                               when 'advanced' then 'bg-blue-100 text-blue-800'
                                               when 'server' then 'bg-purple-100 text-purple-800'
                                               else 'bg-gray-100 text-gray-800'
                                               end %>">
                                  <%= short_method_label(method) %>
                                </span>
                              <% end %>
                            </div>
                          <% end %>
                          <%= link_to contract_path(contract), 
                                      class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                            Zobraziť
                          <% end %>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Žiadne zmluvy</h3>
                <p class="mt-1 text-sm text-gray-500">Začnite vytvorením novej zmluvy.</p>
                <div class="mt-6">
                  <%= link_to "Nová zmluva", new_contract_path, 
                              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>