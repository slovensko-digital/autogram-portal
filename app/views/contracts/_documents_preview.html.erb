<div class="documents-preview" data-controller="document-viewer">
  <!-- Document List (only show if more than 1 document) -->
  <% if @contract.documents.count > 1 %>
    <div class="mb-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-3">
        <% @contract.documents.each_with_index do |document, index| %>
          <div class="document-item cursor-pointer p-3 rounded-lg border border-gray-200 bg-white hover:bg-blue-50 hover:border-blue-300 transition-colors duration-200
                      <%= 'ring-2 ring-blue-500 bg-blue-50 border-blue-300' if index == 0 %>"
               data-document-viewer-target="documentItem"
               data-document-id="<%= document.id %>"
               data-document-index="<%= index %>"
               data-action="click->document-viewer#selectDocument">
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-3">
                <svg class="w-5 h-5 text-gray-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 truncate">
                  <%= document.filename %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Document Content Area -->
  <div id="document-content-area">
    <% @contract.documents.each_with_index do |document, index| %>
      <div class="document-content <%= 'hidden' unless index == 0 %>" 
           data-document-viewer-target="documentContent"
           data-document-id="<%= document.id %>">
        <!-- Document Visualization -->
        <div class="mb-6">
          <!-- Visualization content (Turbo Frame) -->
          <%= turbo_frame_tag "document_visualization_#{document.id}", 
                              src: visualize_document_path(document),
                              loading: "lazy",
                              class: "rounded-lg min-h-[600px]" do %>
            <!-- Loading state while Turbo Frame loads -->
            <div class="p-4 h-[600px] flex items-center justify-center bg-gray-50 rounded-lg">
              <div class="flex items-center">
                <svg class="animate-spin h-5 w-5 text-gray-500 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="text-gray-600">Načítavam obsah dokumentu...</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>