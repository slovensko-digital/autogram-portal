            </svg>
            View on GitHub <span aria-hidden="true" class="ml-1">→</span>
          </a>
        </div>
      </div>
      <div>
        <%= form_with model: Document.new, url: documents_path, local: true, multipart: true, 
                      class: "space-y-4", 
                      data: { 
                        controller: "file-upload",
                        "file-upload-mode-value": "single",
                        "file-upload-dragging-class": "border-blue-800 text-blue-800",
                        "file-upload-uploading-class": "border-solid"
                      } do |form| %>
          
          <%= render 'shared/dropzone', 
                controller_name: 'file-upload',
                input_name: 'document[blob]',
                title: 'Upload your document',
                subtitle: 'Drag and drop or click to browse',
                file_types_hint: 'PDF, XML, ASiC-E and other formats supported',
                uploading_text: 'Uploading...',
                drop_text: 'Drop here',
                height: 'h-[280px]' %>

          <div class="flex flex-col gap-3">
            <div class="flex items-start space-x-3">
              <%= form.check_box :agree_to_policies, 
                                { required: true, class: "mt-0.5 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" },
                                { checked_value: "1", unchecked_value: "0" } %>
              <%= form.label :agree_to_policies, class: "text-sm text-gray-700" do %>
                I agree with <%= link_to "Terms of Service", terms_of_service_index_path, target: "_blank", class: "text-blue-600 hover:underline" %> and <%= link_to "Privacy Policy", privacy_policy_index_path, target: "_blank", class: "text-blue-600 hover:underline" %>
                <span class="text-red-500">*</span>
              <% end %>
            </div>
            
            <%= form.submit "Upload & Continue", 
                           class: "w-full rounded-md bg-blue-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 opacity-50 cursor-not-allowed transition-all duration-200",
                           disabled: true,
                           data: { "file-upload-target": "submitButton" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
