            </svg>
            <%= t('.hero.view_on_github') %> <span aria-hidden="true" class="ml-1">→</span>
          </a>
        </div>
      </div>
      <div>
        <%= form_with model: Document.new, url: documents_path, local: true, multipart: true, 
                      class: "space-y-4", 
                      data: { 
                        controller: "file-upload",
                        "file-upload-mode-value": "single",
                        "file-upload-dragging-class": "border-blue-800 text-blue-800",
                        "file-upload-uploading-class": "border-solid"
                      } do |form| %>

          <%= render 'shared/dropzone', 
                controller_name: 'file-upload',
                input_name: 'document[blob]',
                title: t('.upload_form.title'),
                subtitle: t('.upload_form.subtitle'),
                file_types_hint: t('.upload_form.file_types_hint'),
                uploading_text: t('.upload_form.uploading_text'),
                drop_text: t('.upload_form.drop_text'),
                height: 'h-[280px]' %>

          <div class="flex flex-col gap-3">
            <div class="flex items-start space-x-3">
              <%= form.check_box :agree_to_policies, 
                                { required: true, class: "mt-0.5 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" },
                                { checked_value: "1", unchecked_value: "0" } %>
              <%= form.label :agree_to_policies, class: "text-sm text-gray-700" do %>
                <%= t('.upload_form.agree_to_policies_html', 
                      terms_link: link_to(t('.upload_form.terms_of_service'), terms_of_service_index_path, target: "_blank", class: "text-blue-600 hover:underline"),
                      privacy_link: link_to(t('.upload_form.privacy_policy'), privacy_policy_index_path, target: "_blank", class: "text-blue-600 hover:underline")).html_safe %>
                <span class="text-red-500">*</span>
              <% end %>
            </div>

            <%= form.submit t('.upload_form.submit'), 
                           class: "w-full rounded-md bg-blue-600 px-6 py-3 text-base font-semibold text-white  hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 opacity-50 cursor-not-allowed transition-all duration-200",
                           disabled: true,
                           data: { "file-upload-target": "submitButton" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
