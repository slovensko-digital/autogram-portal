<%= turbo_stream_from @bundle %>
<% @bundle.contracts.each do |contract| %>
  <%= turbo_stream_from "contract_#{contract.uuid}" %>
<% end %>

<main class="w-full min-h-screen">
  <div class="min-h-full flex flex-col">
    <!-- Bundle Header -->
    <div class="bg-gray-50 border-b border-gray-200 p-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Contract Bundle</h1>
          <p class="text-sm text-gray-500 mt-1">
            Please sign all contracts in the bundle
          </p>
        </div>
        <div id="bundle_<%= @bundle.id %>_status">
          <%= render 'status', bundle: @bundle %>
        </div>
      </div>
    </div>

    <!-- Contracts in Bundle -->
    <div class="flex-1 overflow-y-auto">
      <div class="space-y-4 p-4">
        <% @bundle.contracts.order(:updated_at).each_with_index do |contract, index| %>
          <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
            <!-- Contract Header -->
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-indigo-600 text-white text-xs font-medium">
                    <%= index + 1 %>
                  </span>
                  <h2 class="ml-2 text-base font-semibold text-gray-900">
                    Contract <%= index + 1 %> of <%= @bundle.contracts.count %>
                  </h2>
                  <% if !contract.awaiting_signature? %>
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      Signed
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Contract Content -->
            <% if params[:no_preview].present? %>
              <!-- Sign-only mode: no document preview -->
              <div class="p-4">
                <%= render 'contracts/signature_actions', contract: contract, no_preview: true, info_hidden: true %>
              </div>
            <% else %>
              <!-- Full mode: with document preview -->
              <div class="flex flex-col lg:flex-row lg:h-[500px]">
                <!-- Signature Actions -->
                <div class="w-full lg:w-1/3 border-b lg:border-b-0 lg:border-r border-gray-200 bg-gray-50 lg:overflow-y-auto">
                  <div class="p-4">
                    <%= render 'contracts/signature_actions', contract: contract, no_preview: false %>
                  </div>
                </div>

                <!-- Documents Preview -->
                <div class="w-full lg:w-2/3 lg:overflow-y-auto">
                  <div class="p-4">
                    <% # The documents_preview partial expects @contract, so we need to set it temporarily %>
                    <% old_contract = @contract %>
                    <% @contract = contract %>
                    <%= render 'contracts/documents_preview' %>
                    <% @contract = old_contract %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
