<%= turbo_stream_from @bundle %>
<% @bundle.contracts.each do |contract| %>
  <%= turbo_stream_from "contract_#{contract.uuid}" %>
<% end %>

<main>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 pb-8 pt-10 lg:flex lg:px-8 lg:pt-15">
      <div class="mx-auto mt-8 flex max-w-full sm:max-w-3xl sm:mt-12 lg:ml-10 lg:mr-0 lg:mt-8 lg:max-w-none lg:flex-none xl:ml-32">
        <div class="flex flex-col items-center max-w-full sm:max-w-3xl mx-auto lg:max-w-none w-[1000px]">
          
          <!-- Bundle Header -->
          <div class="w-full mb-6">
            <div class="flex items-center justify-between">
              <div>
                <h1 class="text-3xl font-bold text-gray-900">Contract Bundle #<%= @bundle.id %></h1>
                <p class="mt-2 text-sm text-gray-500">
                  UUID: <%= @bundle.uuid %>
                </p>
              </div>
              <div id="bundle_<%= @bundle.id %>_status">
                <%= render 'status', bundle: @bundle %>
              </div>
            </div>
          </div>

          <!-- Contracts in Bundle -->
          <div class="w-full space-y-6">
            <% @bundle.contracts.order(:updated_at).each_with_index do |contract, index| %>
              <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
                <!-- Contract Header -->
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-600 text-white text-sm font-medium">
                        <%= index + 1 %>
                      </span>
                      <h2 class="ml-3 text-lg font-semibold text-gray-900">
                        Contract <%= index + 1 %> of <%= @bundle.contracts.count %>
                      </h2>
                      <% if !contract.awaiting_signature? %>
                        <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          Signed
                        </span>
                      <% end %>
                    </div>
                    <a href="<%= contract_path(contract) %>" target="_blank" class="text-sm text-indigo-600 hover:text-indigo-500">
                      Open separately â†’
                    </a>
                  </div>
                </div>

                <!-- Contract Content -->
                <div class="flex flex-col lg:flex-row">
                  <!-- Signature Actions -->
                  <div class="w-full lg:w-1/3 border-b lg:border-b-0 lg:border-r border-gray-200 bg-gray-50 lg:flex-shrink-0">
                    <div class="p-6">
                      <div class="mb-6">
                        <%= render 'contracts/signature_actions', contract: contract %>
                      </div>
                    </div>
                  </div>

                  <!-- Documents Preview -->
                  <div class="w-full lg:w-2/3 lg:flex-shrink-0 lg:min-w-0">
                    <div class="p-6">
                      <% # The documents_preview partial expects @contract, so we need to set it temporarily %>
                      <% old_contract = @contract %>
                      <% @contract = contract %>
                      <%= render 'contracts/documents_preview' %>
                      <% @contract = old_contract %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Back to Bundles Link -->
          <div class="w-full mt-8">
            <%= link_to bundles_path, class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
              <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
              </svg>
              Back to bundles
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% content_for :title, "Bundle ##{@bundle.id}" %>
