<%= turbo_frame_tag "bundle_note_#{@bundle.uuid}", class: "w-full" do %>
  <%= form_with model: @bundle, method: :put, local: true do |form| %>
    <%= form.hidden_field :step, value: "note" %>
    <h3 class="text-xl font-semibold text-gray-900 mb-4"><%= t('.title') %></h3>
    <label class="flex items-center text-sm font-medium text-gray-700 mb-2">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
      </svg>
      <%= t('.label') %>
    </label>
    <%= form.text_area :note,
          placeholder: t('.placeholder'),
          rows: 6,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <div class="flex justify-end mt-4" style="justify-content: flex-end;">
      <%= form.submit t('actions.save'),
                      class: "items-center w-full sm:w-auto px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 cursor-pointer hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
                      data: { "form-submit-target": "submitButton" } %>
    </div>
  <% end %>
<% end %>
