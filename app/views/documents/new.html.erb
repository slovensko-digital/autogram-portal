<main>
  <div class="mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-40 lg:px-8">
    <div class="mx-auto max-w-full">
      <div class="mb-8 text-center lg:text-left">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">New document</h1>
        <p class="text-gray-600">Upload a document for signing or validation.</p>
        <p class="text-sm text-gray-400 mt-1">You can upload PDF, XML or other files, and sign them in the next step.</p>
      </div>

      <%= form_with model: @document, local: true, multipart: true, 
                    class: "space-y-6", 
                    data: { 
                      controller: "file-upload",
                      "file-upload-mode-value": "single",
                      "file-upload-dragging-class": "border-blue-800 text-blue-800",
                      "file-upload-uploading-class": "border-solid"
                    } do |form| %>
        <% if @document.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Errors occurred while creating the document:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @document.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2">              
            <%= render 'shared/dropzone', 
                  controller_name: 'file-upload',
                  input_name: 'document[blob]',
                  title: 'Upload document here',
                  subtitle: 'Drag and drop here, or click to select a file from disk.',
                  file_types_hint: 'PDF, XML or other file',
                  uploading_text: 'Adding document...',
                  drop_text: 'Drop document here' %>
          </div>

          <div class="lg:col-span-1">
            <div class="bg-white border border-gray-200 sm:rounded-lg sticky top-4">
              <div class="px-4 py-5 sm:p-6">
                <div class="mb-6">
                  <h3 class="text-lg font-medium text-gray-900 mb-3">Document Details</h3>
                  <p class="text-sm text-gray-600">Upload a single document that you want to work with. You can validate signatures, visualize content, or use it for signing.</p>
                </div>

                <div class="pt-4 border-t border-gray-200">
                  <div class="flex items-start space-x-3">
                    <%= form.check_box :agree_to_policies, 
                                      { required: true, class: "mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" },
                                      { checked_value: "1", unchecked_value: "0" } %>
                    <%= form.label :agree_to_policies, class: "text-sm text-gray-700" do %>
                      I agree with <a href="#" class="text-blue-600 hover:text-blue-800 underline">policies, terms and conditions</a>
                      <span class="text-red-500">*</span>
                    <% end %>
                  </div>
                </div>

                <div class="flex flex-col space-y-3 pt-4">
                  <%= form.submit "Upload Document", 
                                  class: "w-full inline-flex justify-center items-center px-4 py-2 rounded-md bg-blue-600 text-sm font-semibold text-white hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 opacity-50 cursor-not-allowed transition-all duration-200",
                                  disabled: true,
                                  data: { "file-upload-target": "submitButton" } %>
                  <%= link_to "Cancel", documents_path, 
                              class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300  text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<% content_for :title, "New Document" %>