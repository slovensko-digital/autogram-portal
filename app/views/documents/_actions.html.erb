<%= turbo_frame_tag "document_actions_#{@document.id}" do %>
  <% unless @document.contract %>
    <div class="w-full">
      <div class="bg-white border border-gray-200 rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="mb-6 text-center lg:text-left">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Sign document</h3>
            <p class="text-gray-600">Choose signature format and method to create a contract and sign the document in the next step.</p>
          </div>
          <%= form_with url: create_contract_from_document_document_path(@document), method: :post, local: true, data: { turbo_frame: "_top" }, class: "space-y-6" do |form| %>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <div>
                <%= label_tag "format_container_combination", "Signature Format", class: "block text-sm font-medium text-gray-700 mb-3" %>
                <div class="space-y-3">
                  <% signature_options = @document.signature_options %>
                  <% signature_options.each do |label, value, description| %>
                    <%= render 'shared/radio_button_card', 
                          name: 'format_container_combination',
                          value: value,
                          label: label,
                          description: description,
                          checked: value == signature_options.first[1] %>
                  <% end %>
                </div>
              </div>
              <div>
                <%= label_tag "allowed_method", "Allowed Signature Method", class: "block text-sm font-medium text-gray-700 mb-3" %>
                <div class="space-y-3">
                  <% [
                    ['QES', 'qes', 'Qualified Electronic Signature'],
                    ['QES + Timestamp', 'ts-qes', 'Qualified Electronic Signature with Timestamp']
                  ].each do |label, value, description| %>
                    <%= render 'shared/radio_button_card', 
                          name: 'allowed_method',
                          value: value,
                          label: label,
                          description: description,
                          checked: value == 'qes' %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="flex flex-col sm:flex-row gap-3">
              <%= submit_tag "Continue to document signing", 
                              class: "inline-flex justify-center items-center px-4 py-2 border border-transparent  text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% if @document.extendable_signatures? %>
      <div class="w-full mt-6">
        <div class="bg-white border border-gray-200 rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <% if current_user %>
              <div class="mb-6 text-center lg:text-left">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Add timestamp</h3>
                <p class="text-gray-600">This document contains signatures without qualified timestamps. You can extend them now if needed.</p>
              </div>
              <%= form_with url: extend_signatures_document_path(@document), method: :post, local: true, class: "space-y-6" do |form| %>
                <div class="flex flex-col sm:flex-row gap-3">
                  <%= submit_tag "Add timestamp to signatures", 
                                class: "inline-flex justify-center items-center px-4 py-2 border border-transparent  text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              <% end %>
            <% else %>
              <div class="mb-6 text-center lg:text-left">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Add timestamp</h3>
                <p class="text-gray-600">This document contains signatures without qualified timestamps.</p>
                <p class="text-gray-600">It is possible to add them now.</p>
              </div>
              <div class="mb-4 text-center lg:text-left">
                <p class="block text-gray-600"><i>You need to sign in to extend them with a timestamp.</i></p>
              </div>
              <div class="flex flex-col sm:flex-row gap-3">
                <%= submit_tag "Add timestamp to signatures", 
                              disabled: true,
                              class: "inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-400 cursor-not-allowed" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
