<footer class="bg-gray-900" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Pätička</h2>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <!-- Left Column: Branding -->
      <div class="space-y-6">
        <!-- Autogram Logo -->
        <div class="flex items-center gap-4">
          <span class="text-2xl font-bold text-white">Autogram Portal</span>
          <div class="h-8 w-px bg-gray-700"></div>
          <p class="text-sm text-gray-400">by Slovensko.Digital</p>
        </div>
        
        <!-- GitHub Link -->
        <a href="https://github.com/slovensko-digital/autogram-portal" 
           class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors group">
          <svg class="h-5 w-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium">View on GitHub</span>
        </a>
      </div>

      <!-- Middle Column: Spacer on larger screens -->
      <div class="mt-12 xl:mt-0"></div>

      <!-- Right Column: Provider Information -->
      <div class="mt-12 xl:mt-0">
        <div class="rounded-lg bg-gray-800/50 p-6 border border-gray-700">
          <h4 class="text-sm font-semibold text-white mb-3 uppercase tracking-wider">Service provider</h4>
          <div class="space-y-2">
            <p class="text-base text-gray-300 font-medium">
              <%= Rails.application.config.footer[:provider_name] %>
            </p>
            <div class="flex items-start gap-2 pt-2">
              <svg class="h-5 w-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <div>
                <p class="text-xs text-gray-400 uppercase tracking-wide">Podpora</p>
                <a href="mailto:<%= Rails.application.config.footer[:support_email] %>" 
                   class="text-sm text-gray-300 hover:text-white transition-colors">
                  <%= Rails.application.config.footer[:support_email] %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-12 mb-60 border-t border-gray-700 pt-8">
      <p class="text-center text-sm text-gray-400">
        <%= link_to "Privacy Policy", privacy_policy_index_path, class: "hover:text-white transition-colors" %>
      </p>
    </div>
  </div>
</footer>