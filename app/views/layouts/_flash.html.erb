<% if flash.any? %>
  <div class="mx-auto max-w-4xl px-6 py-4">
    <% flash.each do |type, message| %>
      <div class="<%= 
        case type.to_s
        when 'notice' then 'bg-green-50 border border-green-200 text-green-800'
        when 'alert' then 'bg-red-50 border border-red-200 text-red-800'
        else 'bg-blue-50 border border-blue-200 text-blue-800'
        end
      %> px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= message %></span>
      </div>
    <% end %>
  </div>
<% end %>
